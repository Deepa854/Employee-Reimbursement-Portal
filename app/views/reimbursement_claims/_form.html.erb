<%= form_with(model: [@company, @employee, @reimbursement_claim], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :purpose %>
      <%= form.text_field :purpose, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :date_of_expenditure %>
      <%= form.date_field :date_of_expenditure, class: 'form-control' %>
    </div>
  
    <div class="form-group">
    <%= form.submit class: 'btn btn-primary my-4' %>
    </div>
  <% end %>
  