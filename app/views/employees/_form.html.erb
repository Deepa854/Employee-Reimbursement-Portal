<%= form_with(model: [@company, @employee], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :position %>
      <%= form.text_field :position, class: 'form-control' %>
    </div>
  
    <%= form.submit class: 'btn btn-primary my-4' %>
  <% end %>
  