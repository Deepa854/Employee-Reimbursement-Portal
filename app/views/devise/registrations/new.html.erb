<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Sign Up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>

      <div class="mb-3">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control', autocomplete: "email" }, label_html: { class: 'col-form-label' } %>
      </div>

      <div class="mb-3">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control', autocomplete: "new-password" }, label_html: { class: 'col-form-label' } %>
      </div>

      <div class="mb-3">
        <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control', autocomplete: "new-password" }, label_html: { class: 'col-form-label' } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary mt-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
